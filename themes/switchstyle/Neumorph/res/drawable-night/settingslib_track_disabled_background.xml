<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:alpha="?android:attr/disabledAlpha">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="24dp" />
                    <gradient
                        android:angle="270.0"
                        android:endColor="#FF0F0F0F"
                        android:startColor="#FF363636" />
                </shape>
            </item>
            <item
                android:bottom="3dp"
                android:left="3dp"
                android:right="3dp"
                android:top="3dp">
                <shape>
                    <padding
                        android:left="4dp"
                        android:right="4dp" />
                    <corners android:radius="24dp" />
                    <gradient
                        android:angle="90.0"
                        android:endColor="#FF0F0F0F"
                        android:startColor="#FF363636" />
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>

